pipeline {
    agent any
    tools { 
        maven 'Maven3' 
        
    }
    stages {
        stage('Build') {
            steps {
                
                bat 'mvn -B -DskipTests clean package'
                
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                    
                   emailext body: "${env.BUILD_URL}", subject: 'jenkins', to: 'sudhakar.pro00@gmail.com'
                    )
                }
            }
        }
        /*stage('Deliver') {
            steps {
                bat './jenkins/scripts/deliver.sh'
            }
        }*/
    }
}
